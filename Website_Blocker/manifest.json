{
    "name": "Website Blocker Test",
    "version": "1.0",
    "description": "Testing website blocker V1",
  "permissions": 
  [
    "storage",
     "activeTab",
     "tabs",
     "http://*/*",
     "https://*/*"
  ],
	"background": {
      "scripts": 
      [
        "background.js",
        "jquery-3.3.1.js"
      ],
      "persistent": false
    },
  "browser_action": 
  {
    "default_popup": "popup.html",
    "default_icon": 
    {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      }
    },

  "content_scripts":[
    {
      "matches": ["*://*.youtube.com/*"],
      "run_at": "document_start",
      "js": ["content_script.js"]
    }
  ],

	"options_page": "options.html",
  "icons": 
    {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    },
    "manifest_version": 2
}
  