{
    "name": "Website Blocker Test",
    "version": "1.0",
    "description": "Testing website blocker V1",
  "permissions": 
  [
    "storage",
    "webRequestBlocking",
     "webRequest",
     "activeTab",
     "tabs",
     "http://*/*",
     "https://*/*"
  ],
	"background": {
      "scripts": 
      [
        "background.js"
      ],
      "persistent": true
    },
  "browser_action": 
  {
    "default_popup": "popup.html",
    "default_icon": 
    {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    }
  },
	"options_page": "options.html",
  "icons": 
    {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    },
    "manifest_version": 2
}
  